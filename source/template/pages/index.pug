extends ../_template

block variables
    script(src='/assets/js/app.js' defer)

block content
    section.l-section.l-welcome
        .l-parallax#parallaxMouse
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-2.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-3.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-4.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-5.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-6.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-7.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-8.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-9.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-10.png')
        .l-welcome__inner.l-section__wrapper
            button.l-welcome__authorization.js-authorization.active#authorizationButton Авторизоваться
            .l-card__wrapper
                .l-card
                    .l-card__welcome.active
                        .l-card__content
                            +user('welcome')
                            +ul('c-social', 'welcome', {
                                vk: 'https://vk.com/igosh',
                                github: 'https://github.com/igosheva',
                                in: 'https://github.com/igosheva'
                            })
                        +nav('nav-welcome', {
                            'Мои работы': './portfolio.html',
                            'Обо мне': './about.html',
                            'Блог': './blog.html'
                        })
                    form.l-card__authorization#authorization(method='post', action='')
                        .l-card__content
                            +blockTitle('Авторизуйтесь', 'authorization')
                            .c-authorization-form__validation#validation1
                            .c-authorization-form
                                .c-authorization-form__item
                                    label.c-authorization-form__lebel
                                        input.c-authorization-form__input(name='text', type='text', placeholder='Логин', required)
                                .c-authorization-form__item
                                    label.c-authorization-form__lebel
                                        input.c-authorization-form__input(name='password', type='password', placeholder='Пароль', required)
                            +checkbox('noRobot', 'Я человек', 'checkbox')
                            p.l-card__content-text Вы точно не робот?
                            .l-card__content-radio
                                +checkbox('radio', 'Да', 'radio', '1')
                                +checkbox('radio', 'Не уверен', 'radio', '0')
                        .nav-welcome
                            ul.nav-welcome__list
                                li.nav-welcome__item
                                    a.nav-welcome__link.js-authorization На главную
                                li.nav-welcome__item
                                    input.nav-welcome__link(type='submit', value='Войти')
            footer.l-welcome__footer
                p © Игошева Анастасия | создано с любовью в LoftSchool | 2017