extends ../_template

block variables
  -
    var
        title = 'IGOSHEVA|Home',
        description = 'IGOSHEVA|Homepage of website of web-developer Igosheva Nastasia',
        keywords = 'website of web-developer Igosheva Nastasia, front-ent'

block content
    section.l-section.l-welcome
        .l-parallax#parallaxMouse
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-2.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-3.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-4.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-5.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-6.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-7.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-8.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-9.png')
            .l-parallax__layer
                img.l-parallax__layer-img(src='assets/images/parallax-10.png')
        .l-welcome__inner.l-section__wrapper
            button.l-welcome__authorization.js-authorization Авторизоваться
            .l-card__wrapper
                .l-card
                    .l-card__welcome.active
                        .l-card__content
                            +user('welcome')
                            +ul('c-social', 'welcome', {
                                vk: 'https://vk.com/igosh',
                                github: 'https://github.com/igosheva',
                                in: 'https://github.com/igosheva'
                            })
                        +nav('nav-welcome', {
                            'Мои работы': './portfolio.html',
                            'Обо мне': './about.html',
                            'Блог': './blog.html'
                        })
                    .l-card__authorization
                        .l-card__content
                            +blockTitle('Авторизуйтесь', 'authorization')
                            +form('c-authorization-form', {'Логин':'text', 'Пароль': 'password'}, {})
                        +nav('nav-welcome', {
                            'На главную': './index.html',
                            'Войти': ''
                        })
            footer.l-welcome__footer
                p © Игошева Анастасия | создано с любовью в LoftSchool | 2017