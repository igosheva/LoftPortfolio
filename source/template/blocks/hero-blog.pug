mixin hero-blog()
    section.l-section.l-hero.l-hero--blog
        .l-hero__background
        .l-section__wrapper.l-hero__inner
            +ul('c-social', 'hero', {vk:'https://vk.com/igosh', github:'https://github.com/igosheva', in:'https://github.com/igosheva'})
            .c-hamburger
                a.c-hamburger__content
            .l-hero__content
                .c-section-title.c-section-title--blog
                    svg.c-section-title__img(viewBox="0 0 302.193 208.012")
                        use(xlink:href="assets/images/sprite.svg#icons--blog_header")
                    .c-user__face
                    h2.c-section-title__text Блог
                    p.c-section-title__extra Статьи, которые я написала